@{
    ViewData["Title"] = "Modificar Usuario";    
}
@model ViewUsuarioUpdateRol

<div class="text-center d-flex flex-column align-items-center">
    <h1 class="text-dark">Modificar Rol de Usuario</h1>
    <form class="my-2 p-4 border border-3 border-dark rounded-2 border-opacity-25" asp-controller="Usuario" asp-action="ModificarUsuarioRol">
        <legend>@Model.Nombre_de_usuario</legend>
        <fieldset>
            <input hidden asp-for="@Model.Id">
            <div class="mb-3 form-floating">
                <div class="mb-3">
                    <label asp-for="@Model.Rol" class="form-label text-center">Rol</label>
                    <select asp-for="@Model.Rol" class="form-select" aria-label="Default select example">
                        @foreach(var r in Model.Roles){
                            <option value="@r">@r</option>
                        }

                    </select>
                </div>
            </div>
            <button type="submit" class="btn  btn-outline-primary">Aceptar</button>
        </fieldset>
    </form>
</div>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}