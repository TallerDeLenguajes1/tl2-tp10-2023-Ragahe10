@{
    ViewData["Title"] = "Usuario";    
}
@model ViewUsuarioAdd

<div class="text-center d-flex flex-column align-items-center">
    <h1 class="text-dark">Crear Usuario</h1>
    <form class="w-50 my-2 p-4 border border-3 border-dark rounded-2 border-opacity-25 needs-validation" novalidate asp-controller="Usuario" asp-action="CrearUsuario">
        <fieldset>
            <div class="mb-3 form-floating">
                <div class="mb-3 form-floating has-validation">
                    <input class="form-control" asp-for="@Model.NombreDeUsuario" aria-describedby="emailHelp" placeholder="Nombre de usuario">
                    <label asp-for="@Model.NombreDeUsuario" class="form-label text-center">Nombre de Usuario</label>
                    <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>
                </div>
                <div class="mb-3 form-floating has-validation">
                    <input type="password" class="form-control" asp-for="@Model.Pass" aria-describedby="emailHelp" placeholder="Contraseña">
                    <label asp-for="@Model.Pass" class="form-label text-center">Contraseña</label>
                    <span asp-validation-for="@Model.Pass" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Rol" class="form-label text-center">Rol</label>
                    <select asp-for="@Model.Rol" class="form-select" aria-label="Default select example">
                        <option value="Operador" selected>Operador</option>
                        <option value="Administrador">Administrador</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn  btn-outline-success">Submit</button>
        </fieldset>
    </form>
</div>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}