@{
    ViewData["Title"] = "Logueo";
}
@model UsuarioLogin

<div class="text-center m-4 p-4">
    <h1 class="text-success">Logueo</h1>
    <form class="m-auto w-50 form-floating" asp-controller="Login" asp-action="Login" method="post">
        <fieldset>
            <div class="form-floating mb-3">
                <input type="text" asp-for="@Model.Nombre" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Nombre</label>
            </div>
            <div class="form-floating">
                <input type="password" asp-for="@Model.Pass" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Contrase√±a</label>
            </div>
            <button type="submit" class="btn my-4 px-3 fs-3 btn-outline-success">Enviar</button>
        </fieldset>
    </form>
</div>
